<div class="large-container center-block">
    <h1><%= @article.title %></h1>
    <%= image_tag @article.picture.thumb.url, class: 'figure-img img-fluid rounded'%>
    <div>
    <p>Escrito por: <strong><%= @article.user.email %></strong></p>
    <p>Creado en: <strong><%= @article.created_at %></strong></p>
    </div>
    <div>
        <%= @article.content %>
    </div>
    <div class="margin-top">
    <p class='label'>Tags</p>
    <% @article.categories.each do |category|%>
        <span class="badge badge-pill padding" style="background-color:<%=category.color%>">
            <%= link_to category.title, category, class: 'text-white'%>
        </span>
    <% end %>
    </div>

    <div>
        <%= link_to "eliminar", @article, method: :delete, class: 'mt-3 btn btn-outline-danger'%>
    </div>
</div>